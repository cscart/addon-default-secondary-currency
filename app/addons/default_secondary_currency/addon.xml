<?xml version="1.0"?>
<addon scheme="2.0" edition_type="ROOT,ULT:VENDOR">
    <id>default_secondary_currency</id>
    <version>1.0</version>
    <default_language>en</default_language>
    <name>Secondary currency by default</name>
    <description>Set the secondary currency to be selected by default in the storefront</description>
    <status>active</status>
    <auto_install>ULTIMATE</auto_install>

    <settings>
        <sections>
            <section id="section">
                <items>
                    <item id="storefront_code">
                        <type>input</type>
                        <name>Desired storefront currency code</name>
                        <default_value>USD</default_value>
                        <variants/>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
</addon>
